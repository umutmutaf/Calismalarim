@model mvcModal.Models.User

@{
    ViewBag.Title = "Login";
}

<center class="table table-bordered" style="margin-top:5%;">
    @using (Html.BeginForm())/*default olarak aynı isimdeki action ın http nin postuna gider*/
    {
    @Html.EditorFor(model => model.Username, new
{
    htmlAttributes =
            new
            {
                @class = "form-control",
                placeholder = "Kullanıcı Adı"
            }
})
    @Html.EditorFor(model => model.Password, new
{
    htmlAttributes =
            new
            {
                @class = "form-control",
                placeholder = "Şifre",
                type = "password",
                style = "margin-top:1%;"
            }
})
    <input type="submit" class="btn btn-primary" value="Giriş Yap" />
    <b class="form-control" style="color:red">@TempData["loginMessage"]</b>
    }
</center>

